<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDosen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/propel1" />

    <TextView
        android:id="@+id/nama1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Nama          : "
        app:layout_constraintTop_toBottomOf="@+id/propel1"/>

    <TextView
        android:id="@+id/NIDN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/nama1"
        android:text="NIDN           : "/>

    <TextView
        android:id="@+id/Fak1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/NIDN1"
        android:text="Fakultas     : " />
    <TextView
        android:id="@+id/Jur1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Fak1"
        android:text="Jurusan      : " />

    <EditText
        android:id="@+id/editnama1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/nama1"
        app:layout_constraintTop_toTopOf="@+id/nama1" />

    <EditText
        android:id="@+id/editnidn1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/NIDN1"
        app:layout_constraintTop_toTopOf="@+id/NIDN1" />

    <EditText
        android:id="@+id/editfakultas1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Fak1"
        app:layout_constraintTop_toTopOf="@+id/Fak1" />

    <EditText
        android:id="@+id/editjurusan1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Jur1"
        app:layout_constraintTop_toTopOf="@+id/Jur1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Selesai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jur1"
        android:layout_marginTop="64dp"
        android:onClick="done1"/>

</androidx.constraintlayout.widget.ConstraintLayout>